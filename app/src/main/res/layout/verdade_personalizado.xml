<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:gravity="center"
        android:padding="16dp">

    <!-- Título do Fragment -->
    <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verdade Personalizado"
            android:textSize="24sp"
            android:textColor="#D81B60"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textStyle="bold"/>

    <!-- Área para mostrar a pergunta -->
    <TextView
            android:id="@+id/textViewPerguntasPersonalizado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pergunta aqui"
            android:textSize="18sp"
            android:textColor="#333333"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:gravity="center" />

    <!-- Botão Respondeu -->
    <Button
            android:id="@+id/buttonRespondeuPersonalizado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Respondeu"
            android:textColor="#FFFFFF"
            android:backgroundTint="#D81B60"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium"/>

    <!-- Botão Consequência -->
    <Button
            android:id="@+id/buttonConsequenciaPersonalizado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consequência"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF4081"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium"/>



</LinearLayout>
