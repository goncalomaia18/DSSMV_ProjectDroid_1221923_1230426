<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:background="#FFFFFF">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verdade"
            android:textSize="24sp"
            android:textColor="#D81B60"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

        <Button
                android:id="@+id/buttonAdicionarPergunta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Adicionar Verdade"
                android:textColor="#FFFFFF"
                android:backgroundTint="#D81B60"
                android:layout_marginEnd="8dp"
                android:padding="12dp"
                android:fontFamily="sans-serif-medium"/>

        <Button
                android:id="@+id/buttonRemoverVerdade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Remover Verdade"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF4081"
                android:layout_marginStart="8dp"
                android:padding="12dp"
                android:fontFamily="sans-serif-medium"/>
    </LinearLayout>


    <View
            android:layout_width="match_parent"
            android:layout_height="24dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consequência"
            android:textSize="24sp"
            android:textColor="#D81B60"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

        <Button
                android:id="@+id/buttonAdicionarConsequencia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Adicionar Consequência"
                android:textColor="#FFFFFF"
                android:backgroundTint="#D81B60"
                android:layout_marginEnd="8dp"
                android:padding="12dp"
                android:fontFamily="sans-serif-medium"/>

        <Button
                android:id="@+id/buttonRemoverConsequencia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Remover Consequência"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF4081"
                android:layout_marginStart="8dp"
                android:padding="12dp"
                android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

    <Button
            android:id="@+id/buttonJogar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jogar"
            android:textColor="#FFFFFF"
            android:backgroundTint="#D00649"
            android:padding="16dp"
            android:fontFamily="sans-serif-medium"/>
</LinearLayout>
